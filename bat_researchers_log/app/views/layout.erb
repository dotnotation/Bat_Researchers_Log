  <body>
    <div class="wrapper">

        <!----------- START NAVBAR --------------->
    <nav class="navbar navbar-expand-lg navbar-light nav-bar">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" width="50" height="50">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <% if logged_in? %>
                    <li class="nav-item">
                    <a class="nav-link active fs-4 " aria-current="page" href="/search">Search</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link active fs-4" href="/bats">All Bats</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link active fs-4" href="/bats/new">Log New Bat</a>
                    </li>
                <% else %>
                    <li class="nav-item">
                    <a class="nav-link active fs-4" href="/signup">Signup</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link active fs-4" href="/login">Login</a>
                    </li>
                <% end%>
            </ul>
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            </div>
        </div>
    </nav>
<!----------- END NAVBAR --------------->
